<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#616161"
    tools:context="com.example.hugo.pointcounter.BskActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time A"
                android:gravity="center_horizontal"
                android:layout_margin="6dp"
                android:paddingTop="16dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:layout_margin="6dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 pontos"
                android:background="#000000"
                android:textSize="18dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_margin="6dp"
                android:paddingBottom="8dp"
                android:onClick="threePointsA"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 pontos"
                android:background="#000000"
                android:textSize="18dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_margin="6dp"
                android:paddingBottom="8dp"
                android:onClick="twoPointsA"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lance livre"
                android:background="#000000"
                android:textSize="18dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_margin="6dp"
                android:onClick="freeThrowA"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Time B"
                android:gravity="center_horizontal"
                android:layout_margin="6dp"
                android:paddingTop="16dp"
                android:textSize="14sp"
                android:textColor="#616161"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:paddingTop="16dp"
                android:paddingBottom="24dp"
                android:layout_margin="6dp"
                android:id="@+id/team_b_score"
                android:textSize="56sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-medium"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 pontos"
                android:background="#000000"
                android:textSize="18dp"
                android:paddingBottom="8dp"
                android:layout_margin="6dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:onClick="threePointsB"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 pontos"
                android:background="#000000"
                android:textSize="18dp"
                android:paddingBottom="8dp"
                android:layout_margin="6dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:onClick="twoPointsB"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lance livre"
                android:background="#000000"
                android:textSize="18dp"
                android:layout_margin="6dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:onClick="freeThrowB"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:background="#000000"
        android:textSize="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="resetScore"/>

</RelativeLayout>
